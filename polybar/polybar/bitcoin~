#!/usr/bin/env python3

import requests

# bitcoin
r = requests.get('https://api.kraken.com/0/public/Ticker?pair=XBTUSD');
ticker = r.json()
btc = '  BTC: %.1f$' % float(ticker['result']['XXBTZUSD']['c'][0])

# eth
r = requests.get('https://api.kraken.com/0/public/Ticker?pair=ETHUSD');
ticker = r.json()
eth = ' ETH: %.1f$' % float(ticker['result']['XETHZUSD']['c'][0])

# xmr 
r = requests.get('https://api.kraken.com/0/public/Ticker?pair=ETHUSD');
ticker = r.json()
xmr = ' XMR: %.1f$' % float(ticker['result']['XXMRZUSD']['c'][0])


print(btc,eth, xmr)
